<!-- @format -->

<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/post" method="post">
  <div class="form-group">
    <label>Text</label>
    <input class="form-control" type="text" name="postTitle" id="" />
    <label>Post</label>
    <textarea
      class="form-control"
      name="postContent"
      rows="5"
      cols="30"
    ></textarea>
  </div>
  <button class="btn btn-primary mt-3" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer") -%>
